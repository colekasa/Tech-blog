<div>
  <h1>Dashboard</h1>
  {{#each posts as |post|}}
    <section>
      <article>
        <header>
          <h3><a href="#">{{post.title}}</a></h3>
          <p>Posted on
            <time
              datetime="{{post.date_created}}"
            >{{post.date_created}}</time></p>
        </header>
        <p>{{post.description}}</p>
        <footer>
          <button class="update-button" data-id="{{post.id}}">Update</button>
          <button class="delete-button" data-id="{{post.id}}">Delete</button>
        </footer>
      </article>
    </section>
  {{/each}}
</div>