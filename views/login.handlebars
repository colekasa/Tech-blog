<h2 class="title-signUp">
  Login
</h2>
<div class="login-container">
  <div class="username-login">
    <input
      class="login-field"
      name="username"
      placeholder="USERNAME"
      id="username-login"
    />
  </div>
  <input
    class="login-field"
    name="password"
    placeholder="PASSWORD"
    type="password"
    id="password-login"
  />
  <button class="login-form login-button">
    Login
  </button>
</div>

<h2 class="title-signUp">
  Sign-UP
</h2>
<div class="signup-container">
  <div class="username-signup">
    <input
      class="signup-field"
      name="username"
      placeholder="USERNAME"
      id="username-signup"
    />
  </div>

  <input
    class="signup-field"
    name="password"
    placeholder="PASSWORD"
    type="password"
    id="password-signup"
  />
  <button class="signup-form signup-button">
    Sign Up
  </button>
</div>

<script src="/js/login.js"></script>